{
  "name": "aviva-nacoes-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:igreja": "npm run dev --prefix sites/igreja",
    "dev:escola": "npm run dev --prefix sites/escola-aviva",
    "build:igreja": "npm run build --prefix sites/igreja",
    "build:escola": "npm run build --prefix sites/escola-aviva",
    "build": "npm run build:all && npm run merge:dist",
    "build:all": "npm run build:igreja && npm run build:escola",
    "merge:dist": "node scripts/merge-dist.js",
    "install:all": "npm install --prefix sites/igreja && npm install --prefix sites/escola-aviva",
    "lint:igreja": "npm run lint --prefix sites/igreja",
    "lint:escola": "npm run lint --prefix sites/escola-aviva",
    "lint": "npm run lint:igreja && npm run lint:escola",
    "preview:igreja": "npm run preview --prefix sites/igreja",
    "preview:escola": "npm run preview --prefix sites/escola-aviva"
  }
}
